{
    "name": "metadrop/drupal-dev",
    "description": "Development dependencies for Drupal projects on top of drupal/core-dev",
    "type": "metapackage",
    "authors": [
        {
            "name": "Omar",
            "email": "omar.lopesino@metadrop.net"
        }
    ],
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "require": {
        "bex/behat-step-time-logger": "^2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0 || ^1.0",
        "drupal/core-dev": ">=9",
        "drupal/devel": "^5.0 || ^4.0",
        "edgedesign/phpqa": "dev-master",
        "metadrop/behat-contexts": "^1.0",
        "metadrop/scripthor": "^4.0",
        "phpspec/prophecy-phpunit": "^2 || ^1",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "drupal/behat_javascript": "^1.0",
        "metadrop/drupal-updater": "^1.0",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpro/grumphp": "^1.1",
        "metadrop/composer-comments": "^1.0",
        "metadrop/grumphp-php-compatibility": "^1.0",
        "drupal/image_styles_generator": "^1.0",
        "drupal/config_inspector": "^2.1",
        "mxr576/ddqg-composer-audit": "^1.2"
    },
    "extra": {
        "package-comments": {
            "edgedesign/phpqa": "Master version is required because latest version (1.26.2) are not compatible with latest phpcpd version"
        }
    },
    "config": {
        "allow-plugins": {
            "metadrop/composer-comments": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    }
}
